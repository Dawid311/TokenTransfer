# Umgebungsvariablen für Token-Transfer-Anwendung

# Base Chain Network RPC URL
# Base Mainnet
RPC_URL=https://mainnet.base.org
# Alternative: Alchemy Base
# RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Alternative: Infura Base  
# RPC_URL=https://base-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Base Sepolia Testnet (für Testing)
# RPC_URL=https://sepolia.base.org

# Private Key des Wallets, das die Tokens sendet (ohne 0x Präfix)
PRIVATE_KEY=your_private_key_here

# Token-Kontraktadresse (bereits konfiguriert)
TOKEN_CONTRACT_ADDRESS=0x69eFD833288605f320d77eB2aB99DDE62919BbC1

# Server Port
PORT=3000

# Gas Limit für Transaktionen (Base Chain optimiert)
GAS_LIMIT=100000

# Gas Price in Gwei (Base hat niedrigere Gas-Kosten)
# Wird automatisch geschätzt wenn nicht gesetzt
# GAS_PRICE=0.001

# Webhook Sicherheit (optional)
# WEBHOOK_SECRET=your_webhook_secret_here

# Google Sheets Konfiguration
# Option 1: Service Account (empfohlen für Server)
GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Option 2: API Key (nur für Read-Only Zugriff)
# GOOGLE_API_KEY=your_api_key_here

# Google Sheets Spreadsheet ID (aus der URL extrahieren)
GOOGLE_SPREADSHEET_ID=159BP31mnBsZXyseTP36tBooaeCnVCHSoI3kvrV-UntQ

# Name des Sheets (optional, Standard: "Sheet1")
GOOGLE_SHEET_NAME=Sheet1

# Queue-Konfiguration
# Intervall für Queue-Verarbeitung in Millisekunden (Standard: 10000 = 10 Sekunden)
QUEUE_PROCESS_INTERVAL_MS=10000

# Node Environment
NODE_ENV=development
